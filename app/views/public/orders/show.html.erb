<h1>注文履歴詳細</h1>

<h3>注文情報</h3>
<table>
  <tr>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払方法</th>
    <th>ステータス</th>
  </tr>
    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    <td>
      <%= @order.postal_code %>
      <%= @order.address %>
      <%= @order.name %>
    </td>
    <td>
      <%= @order.payment_method %>
    </td>
    <td>
      <%= @order.delivery_status %>
    </td>
</table>

<h3>請求情報</h3>
<table>
    <tr>
      <th>商品合計</th>
      <th>配送料</th>
      <th>御請求額</th>
    </tr>
      <td><%= @order.billed_amount %></td>
      <td>800</td>
      <td><%= @order.billed_amount + 800 %></td>
</table>

<h3>注文内容</h3>
<table>
    <tr>
      <th>商品</th>
      <th>単価</th>
      <th>個数</th>
      <th>小計</th>
    </tr>

      <% @order.order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.price %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.price * order_detail.amount %></td>
    </tr>
      <% end %>
</table>

