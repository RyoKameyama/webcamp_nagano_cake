<h2>会員情報編集</h2>

<%= form_with model:@customer, local:true do |f| %>
      <ul>
        <% @customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>

    <div class="field">
    <p>
      <%= f.label :氏名 %>
    　<%= f.text_field :last_name, autofocus: true, id:"last_name" %>
    　<%= f.text_field :first_name, id:"first_name" %>
    </p>
    <p>
      <%= f.label :フリガナ %>
    　<%= f.text_field :last_name_kana, id:"last_name_kana" %>
    　<%= f.text_field :first_name_kana, id:"first_name_kana" %>
    </p>
    <p>
      <%= f.label :郵便番号 %>
    　<%= f.text_field :postal_code, id:"postal_code" %>
    </p>
    <p>
      <%= f.label :住所 %>
    　<%= f.text_field :address, id:"address" %>
    </p>
    <p>
      <%= f.label :電話番号 %>
    　<%= f.text_field :telephone_number, id:"telephone_number" %>
    </p>
    <p>
      <%= f.label :メールアドレス %>
    　<%= f.text_field :email, id:"email" %>
    </p>
  </div>
    <p><%= f.submit "編集を保存", id:"update_botton" %></p>

<% end %>

