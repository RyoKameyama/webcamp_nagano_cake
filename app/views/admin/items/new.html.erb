<h1>商品新規登録</h1>

<%= form_with model: @item, url:"/admin/items", local:true do |f| %>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品説明</h4>
  <%= f.text_area :introduction %>
  <h4>ジャンル</h4>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
  <h4>税抜価格</h4>
  <%= f.text_field :price %>
  <%= f.text_field :address_check %>

  <h4>販売ステータス</h4>
  <%= f.radio_button :is_active, :販売中, checked: true %>
  <%= f.label :is_active, "販売中", {value: :販売中, style: "display: inline-block;"} %>
  <%= f.radio_button :is_active, :販売停止中 %>
  <%= f.label :is_active, "停止中", {value: :販売停止中, style: "display: inline-block;"} %>
  <%= f.submit '新規登録' %>
<% end %>
