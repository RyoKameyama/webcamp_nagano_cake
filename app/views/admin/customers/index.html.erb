<h1>会員一覧</h1>
<table>
<tbody>
  <td>会員ID</td>
  <td>氏名</td>
  <td>メールアドレス</td>
  <td>ステータス</td>
<% @customers.each do |customer| %>
<tr>
  <td><%= customer.id %></td>
  <td><%= link_to customer.last_name + customer.first_name,  admin_customer_path(customer.id) %></td>
  <td><%= customer.email %></td>
  <td><% if customer.is_deleted == "Invalid" %>
  退会
  <% else %>
  有効
  <% end %>
  </td>
</tr>
<% end %>
</tbody>
</table>

<%= paginate @customers %>
